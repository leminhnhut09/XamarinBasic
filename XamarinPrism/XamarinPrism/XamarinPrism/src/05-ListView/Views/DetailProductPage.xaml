<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinPrism.src._05_ListView.Views.DetailProductPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding Product.Image, FallbackValue='Binding Error', TargetNullValue='Null Value'}" />
            <Label
                HorizontalOptions="CenterAndExpand"
                Text="{Binding Product.NameProduct, FallbackValue='Binding Error', TargetNullValue='Null Value'}"
                VerticalOptions="Center" />
            <Label
                HorizontalOptions="CenterAndExpand"
                Text="{Binding Product.Price, FallbackValue='Binding Error', TargetNullValue='Null Value'}"
                VerticalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>