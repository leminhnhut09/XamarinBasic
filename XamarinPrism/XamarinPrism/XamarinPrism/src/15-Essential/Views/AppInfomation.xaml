<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinPrism.src._15_Essential.Views.AppInfomation"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="App Info">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Label Text="{Binding Name}" />
            <Label Text="{Binding Version}" />
            <Label Text="{Binding Theme}" />
            <Label Text="{Binding PackageName}" />
            <Label Text="{Binding Build}" />
            <Button Command="{Binding ShowSettingCommand}" Text="Show Setting" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>