<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinPrism.src._15_Essential.Views.Gyroscope"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Label.Text>
                    <MultiBinding StringFormat="(X, Y, Z): {0}{1}{2}">
                        <Binding Path="X" />
                        <Binding Path="Y" />
                        <Binding Path="Z" />
                    </MultiBinding>
                </Label.Text>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>