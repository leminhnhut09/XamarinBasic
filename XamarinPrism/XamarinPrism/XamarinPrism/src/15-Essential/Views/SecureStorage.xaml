<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinPrism.src._15_Essential.Views.SecureStorage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Enter name" Text="{Binding User}" />
            <Button Command="{Binding OnSavePreferenceCommand}" Text="Save" />
            <Button Command="{Binding OnRemovePreferenceCommand}" Text="Remove" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>