<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinPrism.src._15_Essential.Views.MediaPicker"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Button Command="{Binding OnOpenStorage}" Text="Open Storage" />
            <Button Command="{Binding OnOpenCamera}" Text="Open Camera" />
            <Button Command="{Binding OnOpenVideo}" Text="Open Video" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>