<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinPrism.src._15_Essential.Views.Batterry"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout
            BackgroundColor="{Binding BackgroundColor}"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <Label Text="{Binding ChargeLevel, StringFormat='Charge Level: {0:P0}'}" />
            <Label Text="{Binding State, StringFormat='State: {0}'}" />
            <Label Text="{Binding SourceCharge, StringFormat='SourceCharge: {0}'}" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>