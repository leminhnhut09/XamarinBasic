<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinPrism.src._15_Essential.Views.Map"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Enter name" Text="{Binding Name}" />
            <Entry Text="{Binding Latitude}" />
            <Entry Text="{Binding Longtitude}" />
            <Button Command="{Binding OnMapCommand}" Text="Open Map" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>