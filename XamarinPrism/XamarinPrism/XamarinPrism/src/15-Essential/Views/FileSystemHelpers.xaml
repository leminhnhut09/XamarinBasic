<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinPrism.src._15_Essential.Views.FileSystemHelpers"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Button Command="{Binding OnFileCommand}" Text="Load File" />
            <Label Text="{Binding Text}" />
            <Editor
                HeightRequest="400"
                Placeholder="Enter text"
                Text="{Binding TextFile}" />
            <Button Command="{Binding OnSaveFileCommand}" Text="Save" />
            <Button Command="{Binding OnUploadFileCommand}" Text="Upload" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>