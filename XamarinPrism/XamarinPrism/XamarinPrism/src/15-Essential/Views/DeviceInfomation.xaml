<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinPrism.src._15_Essential.Views.DeviceInfomation"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Device, StringFormat='Tên model: {0}'}" />
            <Label Text="{Binding Manufacturer, StringFormat='Nhà sản xuất: {0}'}" />
            <Label Text="{Binding DeviceName, StringFormat='Tên thiết bị: {0}'}" />
            <Label Text="{Binding Version, StringFormat='Phiên bản: {0}'}" />
            <Label Text="{Binding Platform, StringFormat='Nền tảng: {0}'}" />
            <Label Text="{Binding Idiom, StringFormat='Thiết bị: {0}'}" />
            <Label Text="{Binding DeviceType, StringFormat='Kiểu thiết bị (ảo ?): {0}'}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>