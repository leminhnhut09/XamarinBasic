<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinPrism.src._15_Essential.Views.FilePicker"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Button Command="{Binding OnFilePickerCommand}" Text="One File Picker" />
            <Button Command="{Binding OnMultiFilePickerCommand}" Text="Multi File Picker" />
            <Label Text="{Binding FileName}" />
            <Image Source="{Binding Image}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>