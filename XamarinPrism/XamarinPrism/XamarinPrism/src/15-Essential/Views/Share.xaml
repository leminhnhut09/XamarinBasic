<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinPrism.src._15_Essential.Views.Share"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="You want to share ?" Text="{Binding TextShare}" />
            <Button Command="{Binding OnShareTextCommand}" Text="Share Text" />
            <Button Command="{Binding OnShareUriCommand}" Text="Share Uri" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>