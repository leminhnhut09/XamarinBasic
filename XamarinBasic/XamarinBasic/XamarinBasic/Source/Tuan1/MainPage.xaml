<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinBasic.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Controls and layout">

    <StackLayout Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--  Controls  -->
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                FontAttributes="Bold"
                FontSize="30"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                Text="Controls"
                TextColor="SeaGreen" />
            <Button
                Grid.Row="1"
                Grid.Column="0"
                Clicked="OnLoginButtonClicked"
                Text="Label - Button" />
            <Button
                Grid.Row="1"
                Grid.Column="1"
                Clicked="OnSliderButtonClicked"
                Text="Slider - Editor" />
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Clicked="OnWebViewButtonClicked"
                Text="Web View" />
            <Button
                Grid.Row="2"
                Grid.Column="1"
                Clicked="OnImageButtonClicked"
                Text="Image" />
            <Button
                Grid.Row="3"
                Grid.Column="0"
                Clicked="OnBoxViewButtonClicked"
                Text="Box View" />
            <Button
                Grid.Row="3"
                Grid.Column="1"
                Clicked="OnDateAndTimeButtonClicked"
                Text="Date And Time" />
            <Button
                Grid.Row="4"
                Grid.Column="0"
                Clicked="OnProgressBarButtonClicked"
                Text="ProgressBar" />
            <Button
                Grid.Row="4"
                Grid.Column="1"
                Clicked="OnListViewButtonClicked"
                Text="List View" />
            <!--  Layouts  -->
            <Label
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                FontAttributes="Bold"
                FontSize="30"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                Text="Layouts"
                TextColor="SeaGreen" />
            <Button
                Grid.Row="6"
                Grid.Column="0"
                Clicked="OnGridLayoutButtonClicked"
                Text="Grid Layout" />
            <Button
                Grid.Row="6"
                Grid.Column="1"
                Clicked="OnScrollViewButtonClicked"
                Text="Scoll View" />
            <Button
                Grid.Row="7"
                Grid.Column="0"
                Clicked="OnAbsoluteLayoutButtonClicked"
                Text="Absolute Layout" />
            <Button
                Grid.Row="7"
                Grid.Column="1"
                Clicked="OnRelativeLayoutButtonClicked"
                Text="Relative Layout" />
            <Button
                Grid.Row="8"
                Grid.Column="0"
                Clicked="OnStackLayoutButtonClicked"
                Text="Stack Layout" />
        </Grid>
    </StackLayout>

</ContentPage>
