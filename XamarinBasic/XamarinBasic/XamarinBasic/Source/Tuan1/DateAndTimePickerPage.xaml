<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinBasic.DateAndTimePickerPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Label FontSize="20" Text="Date picker" />
            <DatePicker x:Name="datePicker" Format="dd/MM/yyyy" />
            <Label FontSize="20" Text="Time picker" />
            <TimePicker x:Name="timePicker" />
            <Button Clicked="OnProcessButtonClicked" Text="Process" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>