<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinBasic.ProgressBar"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label FontSize="Medium" Text="Status" />
            <Switch x:Name="statusSwitch" />
            <Label FontSize="Medium" Text="Progress Bar" />
            <ProgressBar x:Name="percentProgressbar" HeightRequest="50" />
            <Button Clicked="OnProgressbarButtonClicked" Text="Click" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>