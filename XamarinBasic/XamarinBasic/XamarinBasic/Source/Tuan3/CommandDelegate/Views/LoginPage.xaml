<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinBasic.Source.Tuan3.CommandDelegate.Views.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cr="clr-namespace:XamarinBasic.CustomRenderers"
    xmlns:effects="clr-namespace:XamarinBasic.Effects"
    Title="{Binding Title}"
    IsBusy="{Binding IsBusy}">
    <ContentPage.Content>
        <StackLayout Padding="20" BackgroundColor="Red">
            <cr:BorderEntry
                x:Name="emailEntry"
                BackgroundColor="Purple"
                BorderRadius="10"
                Placeholder="Enter your email"
                Text="{Binding Email}" />
            <cr:BorderEntry
                x:Name="passEntry"
                BackgroundColor="Purple"
                BorderRadius="10"
                IsPassword="True"
                Placeholder="Enter your password"
                Text="{Binding Password}" />
            <Button
                x:Name="loginButton"
                Command="{Binding LoginCommand}"
                Text="Login" />
            <ActivityIndicator
                HeightRequest="30"
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>