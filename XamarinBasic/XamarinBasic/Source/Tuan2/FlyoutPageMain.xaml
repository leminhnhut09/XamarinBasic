<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage
    x:Class="XamarinBasic.Source.Tuan2.FlyoutPageMain"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:XamarinBasic.Source.Tuan2"
    xmlns:local1="clr-namespace:XamarinBasic">
    <!--  Menu  -->
    <FlyoutPage.Flyout>
        <local:FlyoutPageMainFlyout x:Name="FlyoutPage" />
    </FlyoutPage.Flyout>
    <!--  Detail  -->
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local1:LoginPage Title="Controls" />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>