<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PrismXamarin.src._04_NavigationService.Views.TheFirstPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    Title="{Binding Title}"
    prism:ViewModelLocator.AutowireViewModel="True">
    <ContentPage.Content>
        <StackLayout>
            <Label
                HorizontalOptions="CenterAndExpand"
                Text="{Binding Character.Name, StringFormat='Name: {0}', FallbackValue='Binding fail', TargetNullValue='Null'}"
                VerticalOptions="CenterAndExpand" />
            <Label
                HorizontalOptions="CenterAndExpand"
                Text="{Binding Character.Age, StringFormat='Name: {0}', FallbackValue='Binding fail', TargetNullValue='Null'}"
                VerticalOptions="CenterAndExpand" />
            <Label
                HorizontalOptions="CenterAndExpand"
                Text="{Binding Character.BirthDay, StringFormat='Name: {0}', FallbackValue='Binding fail', TargetNullValue='Null'}"
                VerticalOptions="CenterAndExpand" />
            <Button
                Command="{Binding OnSendChacterCommand}"
                CommandParameter="{Binding Character}"
                Text="Send The Second View" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>